{
  "name": "ecommerce-automation",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/automation",
    "packages/server",
    "packages/client"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w packages/server",
    "dev:client": "npm run dev -w packages/client",
    "build": "npm run build -w packages/shared && npm run build -w packages/automation && npm run build -w packages/server && npm run build -w packages/client",
    "test:unit": "vitest run",
    "test:integration": "npx playwright test --config=packages/automation/playwright.config.ts",
    "test": "npm run test:unit && npm run test:integration"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
